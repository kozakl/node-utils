{
  "name": "@kozakl/node",
  "version": "1.0.1",
  "sideEffects": false,
  "author": {
    "name": "Luke Kozak",
    "email": "kozakluke@gmail.com",
    "url": "https://github.com/kozakl"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kozakl/node-utils"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "publish-dist": "npm run build && cp package.json ./dist && npm publish ./dist --access=public",
    "test": "jest --coverage",
    "test:watch": "npm run test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/src/.*.test)\\.tsx?$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ]
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "fs-extra": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/node": "^10.12.0",
    "jest": "^20.0.4",
    "rest-optimize-webpack-plugin": "^1.0.1",
    "ts-jest": "^22.4.2",
    "typescript": "^3.1.6"
  }
}
